{% extends 'base.html.twig' %}

{% block title %}Rating{% endblock %}

{% block body %}
    <h1>Rating</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ rating.id }}</td>
            </tr>
            <tr>
                <th>Rater_id</th>
                <td>{{ rating.raterId }}</td>
            </tr>
            <tr>
                <th>Text</th>
                <td>{{ rating.text }}</td>
            </tr>
            <tr>
                <th>Rating_score</th>
                <td>{{ rating.ratingScore }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ rating.createdAt ? rating.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ rating.updatedAt ? rating.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_rating_index') }}">back to list</a>

    <a href="{{ path('app_rating_edit', {'id': rating.id}) }}">edit</a>

    {{ include('rating/_delete_form.html.twig') }}
{% endblock %}
