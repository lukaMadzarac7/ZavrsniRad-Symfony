{% extends 'base/index.html.twig' %}

{% block title %}Uredi profil{% endblock %}



{% block body %}
<div class="container">
    <div style="margin:40px;">
    <h1 style="margin-bottom:20px;">Uredi profil</h1>
    {{ form_start(formUser) }}
    {{ form_row(formUser.name, {label: 'Ime' }) }}
    {{ form_row(formUser.surname, {label: 'Prezime' })  }}
    {{ form_start(formUserInfo) }}
    {{ form_row(formUserInfo.phone_number, {label: 'Broj mobitela' }) }}
    {{ form_row(formUserInfo.adress, {label: 'Adresa' }) }}
    {{ form_row(formUserInfo.city, {label: 'Grad ' }) }}
    {{ form_row(formUser.username, {label: 'Korisniƒçko ime' }) }}
    {{ form_row(formUser.email, {label: 'E-mail adresa' }) }}
    {{ form_row(formUser.plainPassword, {
        label: 'Lozinka'
    }) }}
    {{ form_row(formUser.image, {label: 'Profilna slika' }) }}
    <button class="btn btn-primary">{{ button_label|default('Save') }}</button>
    <a href="{{ path('app_profile', {'id' : user.id}) }}">Cancel</a>
    {{ form_rest(formUserInfo) }}
    {{ form_rest(formUser) }}
    {{ form_end(formUserInfo) }}
    {{ form_end(formUser) }}

    </div>

</div>

{% endblock %}

