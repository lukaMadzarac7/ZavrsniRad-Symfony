{% extends 'base/index.html.twig' %}

{% block head %}
<title>Registracija</title>
{% endblock %}


{% block body %}
<div class="container">

<div class="container">
        <div class="row">
            <div style="margin:40px;" class="bg-white">
                <h1>Registrirajte se</h1>
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.name, {label: 'Ime' }) }}
                {{ form_row(registrationForm.surname, {label: 'Prezime' })  }}
                {{ form_start(userInformationForm) }}
                {{ form_row(userInformationForm.phone_number, {label: 'Broj mobitela' }) }}
                {{ form_row(userInformationForm.adress, {label: 'Adresa' }) }}
                {{ form_row(userInformationForm.city, {label: 'Grad ' }) }}
                {{ form_row(userInformationForm.county, {label: 'Županija ' }) }}
                {{ form_row(userInformationForm.country, {label: 'Država ' }) }}
                {{ form_row(registrationForm.username, {label: 'Korisničko ime' }) }}
                {{ form_row(registrationForm.email, {label: 'E-mail adresa' }) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Lozinka'
                }) }}
                {{ form_row(registrationForm.image, {label: 'Profilna slika' }) }}
                <button type="submit" class="btn btn-primary">Registracija</button>
                {{ form_rest(userInformationForm) }}
                {{ form_rest(registrationForm) }}
                {{ form_end(userInformationForm) }}
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
</div>

{% endblock %}
