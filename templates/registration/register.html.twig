{% extends 'base/index.html.twig' %}

{% block head %}
<title>Register</title>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div style="margin:40px;" class="bg-white">
                <h1>Register</h1>
                {{ form_start(registrationForm) }}
                {{ form_row(registrationForm.name) }}
                {{ form_row(registrationForm.surname) }}
                {{ form_start(userInformationForm) }}
                {{ form_row(userInformationForm.phone_number) }}
                {{ form_row(userInformationForm.adress) }}
                {{ form_row(userInformationForm.city) }}
                {{ form_row(userInformationForm.county) }}
                {{ form_row(userInformationForm.country) }}
                {{ form_row(registrationForm.username) }}
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                <button type="submit" class="btn btn-primary">Register</button>
                {{ form_rest(userInformationForm) }}
                {{ form_rest(registrationForm) }}
                {{ form_end(userInformationForm) }}
                {{ form_end(registrationForm) }}
            </div>
        </div>
    </div>
{% endblock %}
