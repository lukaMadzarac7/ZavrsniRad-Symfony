{% extends 'admin/base.html.twig' %}

{% block title %}City{% endblock %}

{% block body %}
    <h1>City</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ city.id }}</td>
            </tr>
            <tr>
                <th>Zip Code</th>
                <td>{{ city.getCityZipCode() }}</td>
            </tr>
            <tr>
                <th>County</th>
                <td>{{ city.county }}</td>
            </tr>
            <tr>
                <th>City</th>
                <td>{{ city.city }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ city.createdAt ? city.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Updated_at</th>
                <td>{{ city.updatedAt ? city.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_city_index') }}">back to list</a>

    <a href="{{ path('app_city_edit', {'id': city.id}) }}">edit</a>

    {{ include('admin/city/_delete_form.html.twig') }}
{% endblock %}
